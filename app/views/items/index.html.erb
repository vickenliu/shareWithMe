<p id="notice"><%= notice %></p>

<h1>Shared Items</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <div class='row'>
        <h3>
          <small><% item.genres.each do |genre| %>
            <span class="label label-danger"><%= genre.name %></span>
          <% end %></small>
              <%= link_to item.name, item %>   <small><em>Shared <%= time_ago_in_words(item.created_at) %></em></small>
        </h3>
              </div>
    <% end %>
  </tbody>
</table>

